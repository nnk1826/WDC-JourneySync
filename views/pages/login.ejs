<%- include('../partials/header_login') %>
    <section class="auth-container">
        <div class="auth-form">
            <a href="/" class="logo">
                <i class="fas fa-route"></i> JourneySync
            </a>
            <h1>Log In</h1>
            <p>Join JourneySync to plan and book your perfect trip</p>
            <form method="POST" action="/login">
                <div class="form-group">
                    <label for="email">Email Address</label>
                    <input type="email" id="email" name="email" placeholder="Enter your email" required>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" placeholder="Enter your password" required>
                </div>
                <div class="terms">
                    <input type="checkbox" id="terms" name="terms" required>
                    <label for="terms">I agree to JourneySync's <a href="/terms">Terms of Service</a> and <a
                            href="/privacy">Privacy Policy</a>. I also agree to receive promotional emails.</label>
                </div>
                <button type="submit" class="auth-btn">Log In</button>
            </form>
            <div class="auth-divider"><span>OR</span></div>
            <div class="social-signup">
                <a href="#" class="social-btn facebook"><i class="fab fa-facebook-f"></i></a>
                <a href="#" class="social-btn google"><i class="fab fa-google"></i></a>
                <a href="#" class="social-btn twitter"><i class="fab fa-twitter"></i></a>
            </div>
            <div class="auth-footer">
                Don't have an account? <a href="/signup">Sign Up</a>
            </div>
        </div>
    </section>
    <%- include('../partials/footer') %>